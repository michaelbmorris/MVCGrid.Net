@{
    ViewBag.Title = "Page Size";
}

<h2>@ViewBag.Title</h2>

@section Scripts{
    <script type="text/javascript">
        $(function() {

            $('#selPageSize').change(function() {
                MVCGrid.setPageSize('PageSizeGrid', $('#selPageSize').val());
            });

            // set value of dropdown to grid setting
            $('#selPageSize').val(MVCGrid.getPageSize('PageSizeGrid'));

        });
    </script>
}

