<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0"
          name="viewport">
    <title>@ViewBag.Title - MVCGrid.Net</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/sh/shCore.css"
          rel="stylesheet"/>
    <link href="~/Content/sh/shThemeDefault.css"
          rel="stylesheet"/>

    <style type="text/css">
        .nuget-badge code {
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
            background-color: #202020;
            border: 4px solid silver;
            border-radius: 5px;
            box-shadow: 2px 2px 3px #6e6e6e;
            color: #e2e2e2;
            display: block;
            font: 1.5em 'andale mono', 'lucida console', monospace;
            line-height: 1.5em;
            overflow: auto;
            padding: 15px;
        }
    </style>

    @RenderSection("head", required: false)
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle"
                        data-target=".navbar-collapse"
                        data-toggle="collapse"
                        type="button">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MVCGrid.Net", "Index", "Home", new
                {
                    area = ""
                }, new
                {
                    @class = "navbar-brand"
                })
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Getting Started", "Index", "gettingstarted")</li>
                    <li>@Html.ActionLink("Demos", "index", "demo")</li>
                    <li>@Html.ActionLink("Documentation", "index", "documentation")</li>
                    <li>@Html.ActionLink("Download", "index", "download")</li>
                    <li>@Html.ActionLink("Support", "index", "support")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="body-content container">
        @RenderBody()
        <hr/>
        <footer>
            <p>&nbsp;</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/MVCGridHandler.axd/script.js"></script>
    @*<script src="~/Scripts/script-debug.js"></script>*@
    <script src="~/Content/sh/shCore.js"></script>
    <script src="~/Content/sh/shBrushJScript.js"></script>
    <script src="~/Content/sh/shBrushCSharp.js"></script>
    <script type="text/javascript">
        SyntaxHighlighter.all();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>