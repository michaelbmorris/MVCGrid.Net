@{
    ViewBag.Title = "Initial Date";
}

<h2>Initial Date</h2>

<div class="well">
    <div class="form-inline">
        <div class="form-group">
            <input class="form-control"
                   id="searchYear"
                   placeholder="Year"
                   type="text"/>
        </div>
        <button class="btn btn-default"
                id="searchButton"
                type="button">
            Search
        </button>
    </div>
</div>

@Html.MVCGrid("InitialDateGrid")

@section Scripts{
    <script type="text/javascript">
        $(function() {
            $('#searchButton').click(function() {
                MVCGrid.setFilters('InitialDateGrid', { Year: $('#searchYear').val() });
            });

            $('#searchYear').val(MVCGrid.getFilters('InitialDateGrid').Year);
        });
    </script>
}